@page
@model Reteteculinare.Pages.Recipes.DeleteModel

@{
    ViewData["Title"] = "Delete Recipe";
}

<h1>Delete Recipe</h1>

<div>
    <h4>Are you sure you want to delete this recipe?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.RecipeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.RecipeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.ChefName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.ChefName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Category)
        </dd>
    </dl>
</div>

<div>
    <form method="post">
        <input type="hidden" asp-for="Recipe.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

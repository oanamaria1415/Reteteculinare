@page
@model Reteteculinare.Pages.Recipes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Recipe Details</h1>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.RecipeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.RecipeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.ChefName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.ChefName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Category)
        </dd>
    </dl>
</div>

<div>
    <h4>Ingredients</h4>
    <hr />
    @if (Model.Recipe.Ingredients != null && Model.Recipe.Ingredients.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Ingredient</th>
                    <th>Quantity</th>
                    <th>Unit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ingredient in Model.Recipe.Ingredients)
                {
                    <tr>
                        <td>@ingredient.Name</td>
                        <td>@ingredient.Quantity</td>
                        <td>@ingredient.Unit</td>
                    </tr>
                }
                @* Close tbody tag properly *@
            </tbody>
        </table>
    }
    else
    {
        <p>No ingredients available for this recipe.</p>
    }
</div>

<div>
    <h4>Instructions</h4>
    <hr />
    <p>@Model.Recipe.Instructions</p>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Recipe.ID" class="btn btn-primary">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>

@page
@model Reteteculinare.Pages.Recipes.IndexModel

@{
    ViewData["Title"] = "Discover Recipes";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Discover Recipes</h1>
        <a asp-page="./Create" class="btn btn-success btn-lg shadow">
            <i class="bi bi-plus-circle"></i> Create Recipe
        </a>
         <form method="get" class="mb-4">
        <div class="row g-3">
            <div class="col-md-6">
                <input type="text" name="SearchQuery" class="form-control" placeholder="Search recipes..."
                       value="@Model.SearchQuery" />
            </div>
                <div class="col-md-3">
                    <select name="ChefFilter" class="form-select">
                        <option value="">All Chefs</option>
                        @foreach (var chef in Model.ChefList)
                        {
                            <option value="@chef" selected="@(Model.ChefFilter == chef ? "selected" : null)">@chef</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <select name="CategoryFilter" class="form-select">
                        <option value="">All Categories</option>
                        @foreach (var category in Model.CategoryList)
                        {
                            <option value="@category" selected="@(Model.CategoryFilter == category ? "selected" : null)">@category</option>
                        }
                    </select>
                </div>

        </div>
        <div class="mt-3 text-end">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i> Search
            </button>
        </div>
    </form>
    </div>

    <div class="row g-4">
        @foreach (var recipe in Model.Recipe)
        {
            <div class="col-md-4">
                <div class="card shadow border-0 h-100">
                    <img src="@recipe.ImagePath" class="card-img-top rounded-top" alt="@recipe.RecipeName" style="height: 200px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title text-center text-uppercase fw-bold">@recipe.RecipeName</h5>
                        <p class="card-text text-muted"><strong>Chef:</strong> @recipe.ChefName</p>
                        <p class="card-text text-muted"><strong>Category:</strong> @recipe.Category</p>
                    </div>
                    <div class="card-footer bg-white border-0">
                        <div class="d-flex justify-content-between">
                            <a asp-page="./Details" asp-route-id="@recipe.ID" class="btn btn-outline-primary w-100 me-2">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <a asp-page="./Edit" asp-route-id="@recipe.ID" class="btn btn-outline-warning w-100 me-2 text-dark">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@recipe.ID" onsubmit="return confirm('Are you sure you want to delete this recipe?');" class="w-100">
                                <button type="submit" class="btn btn-outline-danger w-100">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

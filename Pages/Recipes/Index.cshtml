@page
@model Reteteculinare.Pages.Recipes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Recipe[0].RecipeName)</th>
            <th>@Html.DisplayNameFor(model => model.Recipe[0].ChefName)</th>
            <th>@Html.DisplayNameFor(model => model.Recipe[0].Category)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Recipe)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.RecipeName)</td>
                <td>@Html.DisplayFor(modelItem => item.ChefName)</td>
                <td>@Html.DisplayFor(modelItem => item.Category)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">View</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@page
@model LoginModel

<h2>Login</h2>

<form method="post">
    <!-- Afișare erori de validare generale -->
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Câmp pentru Email -->
    <div class="form-group">
        <label asp-for="Input.Email" class="control-label"></label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <!-- Câmp pentru Parolă -->
    <div class="form-group">
        <label asp-for="Input.Password" class="control-label"></label>
        <input asp-for="Input.Password" type="password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <!-- Buton de login -->
    <button type="submit" class="btn btn-primary">Login</button>
</form>

<p>Didn't sign up yet? <a href="/Account/Register">Try now</a></p>
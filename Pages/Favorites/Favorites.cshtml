@page
@model Reteteculinare.Pages.FavoritesModel

@{
    ViewData["Title"] = "Favorites";
}

<div class="container my-5" style="background: linear-gradient(to bottom, rgba(0,0,0,0.6), rgba(0,0,0,0.8)), url('/path/to/background.jpg'); background-size: cover; border-radius: 15px; padding: 20px;">
    <h1 class="display-4 fw-bold text-light text-center mb-4" style="text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.9);">Your Favorite Recipes</h1>

    @if (Model.Favorites.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var favorite in Model.Favorites)
            {
                <div class="col">
                    <div class="card shadow-sm border-0 h-100" style="transition: transform 0.3s ease, box-shadow 0.3s ease; border-radius: 15px; overflow: hidden; background: rgba(255, 255, 255, 0.1); color: white;" onmouseover="this.style.transform='scale(1.05)'; this.style.boxShadow='0 4px 20px rgba(0,0,0,0.6)';" onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='0 2px 10px rgba(0,0,0,0.4)';">
                        <img src="@favorite.Recipe.ImagePath" class="card-img-top" alt="@favorite.Recipe.RecipeName" style="height: 200px; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title text-center text-uppercase fw-bold" style="color: #eee;">@favorite.Recipe.RecipeName</h5>
                            <p class="card-text" style="color: #ccc;"><strong>Chef:</strong> @favorite.Recipe.ChefName</p>
                            <p class="card-text" style="color: #ccc;"><strong>Category:</strong> @favorite.Recipe.Category</p>
                        </div>
                        <div class="card-footer bg-dark border-0">
                            <div class="d-flex justify-content-center">
                                <a asp-page="/Recipes/Details" asp-route-id="@favorite.Recipe.ID" class="btn btn-primary w-100 me-2 d-flex align-items-center justify-content-center" style="border-radius: 15px;">
                                    <i class="bi bi-eye me-2"></i> View
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center text-light">You have no favorite recipes yet.</p>
    }
</div>

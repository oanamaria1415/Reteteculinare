@page
@model IndexModel
@{
    Layout = null; // Elimină complet layout-ul pentru această pagină
    ViewData["Title"] = "Home page";
}

<div style="margin: 0; padding: 0; position: fixed; width: 100%; height: 100%; background-image: url('/images/wallpaper.jpg'); background-size: cover; background-position: center; overflow: hidden;">
    <!-- Overlay pentru fundal -->
    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.6);"></div>

    <!-- Conținutul principal -->
    <div style="position: relative; z-index: 2; display: flex; flex-direction: column; justify-content: center; align-items: center; height: 100%; text-align: center;">
        <h1 class="text-white display-3 fw-bold">Welcome to Culinary Recipes</h1>
        <p class="text-white lead mb-4">Discover and create amazing recipes!</p>

        <!-- Buton cu stil -->
        <a href="/Account/Login" class="btn-explore">Explore Pages</a>
    </div>
</div>

<!-- Stiluri personalizate pentru întreaga pagină -->
<style>
    body {
        margin: 0;
        overflow: hidden; /* Elimină scroll-ul */
    }

    .btn-explore {
        background-color: #007bff; /* Culoarea butonului */
        color: white; /* Culoarea textului */
        padding: 15px 40px; /* Spațiere interioară */
        font-size: 1.25rem; /* Mărimea textului */
        border-radius: 30px; /* Colțuri rotunjite */
        text-transform: uppercase; /* Text cu majuscule */
        transition: all 0.3s ease-in-out; /* Animație smooth */
        text-decoration: none; /* Elimină sublinierea hyperlink-ului */
        display: inline-block; /* Asigură că se comportă ca un buton */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3); /* Adaugă umbră */
    }

        .btn-explore:hover {
            background-color: #0056b3; /* Culoare la hover */
            transform: scale(1.1); /* Mărește butonul la hover */
            color: white; /* Menține culoarea textului */
        }

    .text-white {
        color: white !important; /* Forțează textul să fie alb */
    }
</style>
